source 'http://rubygems.org'

gem 'rails', '3.0.10'

# Bundle edge Rails instead:
# gem 'rails', :git => 'git://github.com/rails/rails.git'

# Use unicorn as the web server in production
group :production do
  gem 'mysql2', '< 0.3'
  gem 'unicorn'
end

group :development do
  gem 'sqlite3-ruby', :require => 'sqlite3'
  gem 'capistrano'
end

gem 'nokogiri'
gem 'mechanize'